{
    "conventionalCommits": true,
    "git": {
        "tag": true,
        "changelog": true,
        "commitMessage": "release: v${version}\n\n${changelog}",
        "requireCleanWorkingDir": true
    },
    "npm": {
        "publish": false,
        "ignoreVersion": false
    },
    "branches": {
        "main": {
            "channel": "latest"
        },
        "develop": {
            "channel": "alpha"
        },
        "stage": {
            "channel": "beta"
        },
        "support/*": {
            "channel": "latest",
            "increment": "patch",
            "range": "${branch.name.replace(/^support\\//, '')}"
        }
    }
}