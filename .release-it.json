{
    "conventionalCommits": true,
    "git": {
        "tag": true,
        "changelog": true,
        "commitMessage": "chore(release): ${version}\n\n${changelog}",
        "requireCleanWorkingDir": true
    },
    "npm": {
        "publish": false,
        "ignoreVersion": false
    },
    "branches": {
        "main": {
            "channel": "latest"
        },
        "develop": {
            "channel": "alpha"
        },
        "stage": {
            "channel": "beta"
        },
        "support/*": {
            "plugins": {
                "@release-it/conventional-changelog": false
            },
            "channel": "lts",
            "increment": "patch",
            "range": "${branch.name.replace(/^support\\//, '')}"
        }
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular"
        }
    }
}