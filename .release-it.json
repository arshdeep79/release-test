{
    "git": {
        "tag": true,
        "changelog": true,
        "commitMessage": "chore(release): ${version}\n\n${changelog}",
        "requireCleanWorkingDir": true
    },
    "npm": {
        "publish": false,
        "ignoreVersion": false
    },
    "hooks": {
        "before:bump": "if [[ $BRANCH == support/* ]]; then release-it --increment patch; fi"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "skip": [
                "support/*"
            ]
        }
    },
    "branches": {
        "main": {
            "channel": "latest",
            "conventionalCommits": true
        },
        "develop": {
            "channel": "alpha",
            "conventionalCommits": true
        },
        "stage": {
            "channel": "beta",
            "conventionalCommits": true
        },
        "support/*": {
            "channel": "lts",
            "increment": "patch",
            "range": "2.0.x",
            "conventionalCommits": false
        }
    }
}