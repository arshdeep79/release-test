{
    "conventionalCommits": true,
    "git": {
        "tag": true,
        "changelog": true,
        "commitMessage": "chore(release): ${version}\n\n${changelog}",
        "requireCleanWorkingDir": true
    },
    "npm": {
        "publish": false,
        "ignoreVersion": false
    },
    "branches": {
        "main": {
            "channel": "latest"
        },
        "develop": {
            "channel": "alpha"
        },
        "stage": {
            "channel": "beta"
        },
        "support/*": {
            "channel": "lts",
            "increment": "patch",
            "range": "2.0.x",
            "npm": {
                "publish": false,
                "ignoreVersion": true
            }
        }
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular"
        }
    }
}