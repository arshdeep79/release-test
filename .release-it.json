{
    "git": {
        "tag": true,
        "changelog": true,
        "commitMessage": "chore(release): ${version}\n\n${changelog}",
        "requireCleanWorkingDir": true
    },
    "npm": {
        "publish": false,
        "ignoreVersion": false
    },
    "plugins": {
        "@release-it/changelog": {
            "file": "CHANGELOG.md",
            "template": "keepachangelog"
        }
    },
    "branches": {
        "main": {
            "channel": "latest",
            "conventionalCommits": true
        },
        "develop": {
            "channel": "alpha",
            "conventionalCommits": true
        },
        "stage": {
            "channel": "beta",
            "conventionalCommits": true
        },
        "support/*": {
            "channel": "lts",
            "increment": "patch",
            "range": "2.0.x"
        }
    }
}