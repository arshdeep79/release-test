{
    "git": {
        "tag": true,
        "changelogCommand": "auto-changelog --stdout --template changelog.hbs --unreleased-only",
        "commitMessage": "chore(release): ${version}\n\n${changelog}",
        "requireCleanWorkingDir": true
    },
    "hooks": {
        "after:bump": "npx auto-changelog -p"
    },
    "npm": {
        "publish": false,
        "ignoreVersion": false
    },
    "branches": {
        "main": {
            "channel": "latest",
            "conventionalCommits": true
        },
        "develop": {
            "channel": "alpha",
            "conventionalCommits": true
        },
        "stage": {
            "channel": "beta",
            "conventionalCommits": true
        },
        "support/*": {
            "channel": "lts",
            "increment": "patch",
            "range": "2.0.x"
        }
    }
}